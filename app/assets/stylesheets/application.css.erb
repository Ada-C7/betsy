//= depend_on_asset "cart-icon.png"


* {
  font-family: "Amazon Ember", Arial, sans-serif;
}

header {
  background-color: #232f3e;
  color: white;
  padding: 5px 15px;
}

header .menu > li > a, header nav div a {
  color: white;
  padding: 5px;
}

header nav a:hover {
  border: 1px solid #4f5965;
  border-radius: 5%;
  color: white;
}

header li a.dropdown-menu-item {
  color: black;
}

/*Bold Orange*/
header li a.dropdown-menu-item:hover, #nav-cart-count {
  color: #e47911;
  font-weight: bold;
  border: none;
}

/*Header divs for navigation*/
header nav div {
  height: 40px;
  display: inline-block;
}

/*Left part of header menu*/
header nav div:first-of-type {
  padding-top: 15px;
}

/*Right part of header menu*/
header nav > div:nth-of-type(2) a {
  margin-bottom: -7px;
}

/* this controls the color of that arrow on a dropdown menu */
.dropdown.menu > li.is-dropdown-submenu-parent > a::after {
  border-color: white transparent transparent;
}

#nav-cart {
  position: relative;
  width: 85px;
  height: 40px;
  padding: 0px;
  display: inline-block;
}

#nav-cart-count {
  position: absolute;
  top: -3px;
  left: 18px;
  width: 20px;
  text-align: center;
}

#nav-cart-icon {
  display: block;
  overflow: hidden;
  position: absolute;
  background-position: 0px 0px;
  width: 50px;
  height: 35px;
  background-image: url('<%= asset_path('cart-icon.png') %>');
  background-size: 50px;
  background-repeat: no-repeat;
}

#cart-label {
  position: absolute;
  left: 46px;
  bottom: 2px;
  font-weight: bold;
}

img.small-logo {
  height: 30px;
}

img.feature {
  width: 400px;
}

img.preview {
  height: 200px;
}

img.thumbnail {
  width: 100px;
}

input[type="submit"], .button {
  background: #f0c14b;
  border-color: #a88734 #9c7e31 #846a29;
  color: #111;
  font-size: 0.85em;
  padding: 5px;
  border-radius: 3px;
  border-style: solid;
  border-width: 1px;
  cursor: pointer;
  display: inline-block;
  text-align: center;
  text-decoration: none!important;
  vertical-align: middle;
  background: linear-gradient(to bottom,#f7dfa5,#f0c14b);
  transition: none;
}

input[type="submit"]:hover, .button:hover {
  border-color: #a88734 #9c7e31 #846a29;
  color: black;
  background: #f0c14b;
}

/* FOOTER */
html {
  position: relative;
  min-height: 100%;
}

body {
  margin: 0 0 150px; /* bottom = footer height */
  min-height: 100%;
}

footer {
  position: absolute;
  left: 0;
  bottom: 0;
  height: 150px;
  width: 100%;
  background-color: #131a22;
}

footer.large-12.columns {
  padding: 0px;
  color: white;
}

footer .back-to-top {
  width: 100%;
  background-color: #37475a;
  text-align: center;
  padding: 15px;
  color: white;
}

footer .back-to-top:hover {
  background-color: #485769;
}

footer section:first-of-type {
  width: 100%;
  height: 20px;
  background-color: #232f3e;
}

footer section:last-of-type {
  width: 100%;
  background-color: #131a22;
  font-size: 0.75em;
  text-align: center;
  padding: 10px;
}
