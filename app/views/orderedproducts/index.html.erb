<h1>Shopping Cart</h1>
<h2>Items (<%= @order.nil? ? 0 : @order.item_total %>)</h2>

<% if @ops.empty? %>
  <h3>
    Your cart is currently empty. <%= link_to "Continue Shopping", products_path %>
  </h3>
<% end %>


<ul>
  <% @ops.each do |op| %>
    <li>
      <%= Product.find_by(id: op.product_id).name %>
      <%= image_tag Product.find_by(id: op.product_id).photo_url %>
      Qty: <%= op.quantity %>
      <section class="form">
        <%= form_for op, url: orderedproduct_path(op.id), method: :patch do |f| %>
        <%= f.label :quantity %>
        <%= f.number_field :quantity, step: 1, in: 1..10  %>

        <%= f.submit value: "Update QTY", class: "button"%>

      <% end %>
    </section>
      <%= link_to "Remove from Cart", orderedproduct_path(op), method: :delete, class: "button alert" %>
    </li>
  <% end %>
</ul>

<% if !@ops.empty? %>
  <%= link_to "Checkout", edit_order_path(@ops.first.order), class: "button" %>
<% end %>
