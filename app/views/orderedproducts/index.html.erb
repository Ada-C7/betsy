<h1>Shopping Cart</h1>
<h2>Items (<%= @ops.count %>)</h2>

<% if @ops.empty? %>
  <h3>
    Your cart is currently empty. <%= link_to "Continue Shopping", products_path %>
  </h3>
<% end %>


<ul>
  <% @ops.each do |op| %>
    <li>
      <%= Product.find_by(id: op.product_id).name %>
      <%= image_tag Product.find_by(id: op.product_id).photo_url %>
      Qty: <%= op.quantity %>
      <%= link_to "Remove from Cart", orderedproduct_path(op), method: :delete, data: {confirm: "Are you sure you want to delete this item"}, class: "button alert" %>
    </li>
  <% end %>
</ul>
