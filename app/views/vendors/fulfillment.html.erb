               <li> Price: <%= order_item.product.price %> </li>
               <li> Subtotal: <%= order_item.product.price * order_item.quantity %> </li>
               <li> Last Updated: <%= order_item.updated_at %> </li>
          </ul>
          <%= button_to 'Cancel' %> <%= button_to 'Ship' %> <%= button_to 'Customer Details' %>
     <% end %>

