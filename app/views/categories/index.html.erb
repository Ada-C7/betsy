<% content_for :headline do %>
     <h1> Categories </h1>
<% end %>

<% content_for :categories do %>
     <% Category.all.each do |category| %>
         <%= link_to category.label, category_products_path(category.id), class: 'label' %>
       <% end %>
<% end %>

<% @categories.each do | category |%>
     <div class='product'>
          <% if category.products != [] %>
               <%= link_to category_products_path(category.id) do %>
                    <%= image_tag  category.sample_photo %>
               <% end %>
          <% else %>
               <%= link_to category_products_path(category.id) do %>
                    <%= image_tag 'category-04' %>
               <% end %>
           <% end %>
           <h4 class=' name'> <%= category.label %> </h4>
     </div>
<% end %>
