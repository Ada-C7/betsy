
<section class="title">
  <h1> Browse By Category </h1>
</section>


<% @categories.each do |category|%>
<aside class="category-box">
  <p class ="title"> <%="#{category.name}"%> </p>
<%= link_to image_tag(category.img_url),products_path(:category_id => category.id) %>
</aside>
<%end%>
<%if @current_merchant%>
<%=link_to "Add a new category" ,new_category_path,:class=> "button"%>
<%end%>
