<h3 class = "row">Create a new category </h3>


<% if @category.errors.messages.length > 0 %>
<section class="errors">
  <h2>Something went wrong!</h2>
  <ul>
    <% @category.errors.messages.each do |field, problem_list| %>
      <% problem_list.each do |problem| %>
        <li>
          <strong><%= field %>:</strong>
          <%= problem %>
        </li>
        <% end %>
    <% end %>
  </ul>
</section>
<% end %>


<%= form_for @category do |f| %>
<div>
  <%= f.label :name, class: "label"%>
  <%= f.text_field :name, class: "field"%>
</div>
<div id = "_form_section_submit">
  <%= f.submit value: "SAVE"%>
</div>
<% end %>
