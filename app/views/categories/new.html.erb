<h3 class = "row">Create a new category </h3>


<section class="row large-4"> 
  <%= form_for @category do |f| %>
  <div>
    <%= f.label :name, class: "label"%>
    <%= f.text_field :name, class: "field"%>
  </div>
  <div id = "_form_section_submit">
    <%= f.submit value: "SAVE"%>
  </div>
  <% end %>
</section>
