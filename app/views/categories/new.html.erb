<h1> New Category </h1>

<%= form_for @category do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.submit class: "button" %>
<% end %>

<% if @category.errors.any? %>
  <% @category.errors.each do |attribute, message| %>
    <%= attribute.capitalize %> <%= message %>
  <% end %>
<% end %>
