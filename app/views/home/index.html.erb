<main>
  <h2>Featured Products</h2>

  <div class="row">
    <% @top_products.each do | product | %>
      <section class="small-12 medium-4 columns">
        <%= image_tag product.photo_url %>
        <h4><%= link_to product.name, product_path(product.id) %> </h4>
        <h5><strong>$<%= product.price %></strong></h5>
      </section>
    <% end %>
  </div>
</main>
