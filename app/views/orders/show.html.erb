<h1>Cart</h1>
<%= session[:order_ids] %>
<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Unit Price</th>
      <th>Quantity</th>
      <th></th>
    </tr>
  </thead>
  <tbody>

    <% session[:quantities].each do |n| %>
    <tr>
      <td><%= @product_names[n] %></td>
      <td>$<%= @prices[n] %></td>
      <td>

        OrderProduct Qty: <%= session[:quantities][n] %>
        <%= form_for @orderproduct, url: update_quantity_path(id: params[:id]) do |f| %>
          <%= f.number_field :quantity, min: 1, placeholder: session[:quantities][n]%>

          <%= f.submit "Update"%>
          <%#= number_field_tag :quantity, session[:quantities][n], min: 1 %>
        <% end %>
      </td>

<%#= number_field_tag 'quantity', 1, min: 1 %>


    </tr>
  <% n += 1 %>
  <% end %>

  </tbody>
  <li><h2>Subtotal: $<%= '%.02f' % @subtotal %></h2></li>
</table>
