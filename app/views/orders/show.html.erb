<h2>Your Order Is Complete!</h2>

<ul>
  <li>Name: <%= @order.name_on_cc %></li>
  <li>Email Address: <%= @order.email %></li>
  <li>Mailing Address: <%= @order.mailing_address %></li>
  <li>CC last 4 digits: <%= @order.cc_num %></li>
  <li>CC expiration date: <%= @order.cc_exp %></li>
</ul>

<h3>Grand Total: $</h3>


<article>
  <table>
    <thead>
      <th>Product</th>
      <th>Image</th>
      <th>Quantity</th>
      <th>Unit Price</th>
    </thead>
    <tbody>
      <% @order.orderedproduct.each do |op| %>
      <tr>
        <td><%= Product.find_by(id: op.product_id).name %></td>
        <td><%= image_tag Product.find_by(id: op.product_id).photo_url %></td>
        <td><%= op.quantity %></td>
        <td>$<%= op.product.price %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</article>
