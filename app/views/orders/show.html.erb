<h1>Selected order</h1>

<h4>
  <ul>
    <li>
      Order ID: <%= @result_order.id %>
      Total: $<%= @result_order.total %>
    </li>
  </ul>
</h4>

<h5>
  <% if @payment != %>
  <ul>
    <li>
      Customer name: <%= @payment.name_on_card %>
      Email address: <%= @payment.email %>
      Mailing address: <%= @payment.ship_address %>
      CC: <%= @payment.card_number %>
      CC expiration date: <%= @payment.expiration_date %>
    </li>
  </ul>
  <% end %>
</h5>

<%= link_to "Edit", edit_order_path(@result_order.id) %>
<%= link_to "Delete", order_path(@result_order.id),
  data: {confirm: "Are you sure you want to delete this order?"},
  method: :delete
%>

<p><%= link_to "Orders", orders_path %></p>
<p><%= link_to "Home", root_path %></p>
