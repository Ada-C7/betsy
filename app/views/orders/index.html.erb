<h1>Your Cart</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
  <% if @order_items %>
    <% @order_items.each do |order_item| %>
      <tr>
        <td><%= link_to order_item.product.name, product_path(order_item.product_id) %></td>
        <td><%= order_item.quantity %></td>
        <td></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>
