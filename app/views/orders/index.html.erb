<h1>Your Cart</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Remove From Cart</th>
    </tr>
  </thead>
  <tbody>
  <% if @order_items %>
    <% @order_items.each do |order_item| %>
      <tr>
        <td><%= link_to order_item.product.name, product_path(order_item.product_id) %></td>
        <td><%= form_tag set_item_path, method: :post do %>
            <%= hidden_field_tag :id, order_item.product_id %>
            <%= number_field_tag :quantity, order_item.quantity, min: 1 %>
            <%= submit_tag "Update" %>
            <% end %></td>
        <td></td>
        <td><%= link_to "Remove", order_path(order_item.product_id), method: "delete", class: "button" %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

<%= link_to "Checkout", checkout_path, class: "button" %>
<%= link_to "Continue Shopping", root_path, class: "button" %>
