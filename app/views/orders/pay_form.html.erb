
<ul>

  <% @order.errors.each do
    |field, msg| %>
    <li>
      <%= field %> <%= msg %>
    </li>
    <% end %>
</ul>


<%= form_for Payment.new, method: :post, url: paid_path(@order.id) do |f| %>

  <%= f.label :name_on_card %>
  <%= f.text_field :name_on_card %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :phone_num %>
  <%= f.text_field :phone_num %>

  <%= f.label :ship_address %>
  <%= f.text_field :ship_address %>

  <%= f.label :bill_address %>
  <%= f.text_field :bill_address %>

  <%= f.label :card_number %>
  <%= f.text_field :card_number %>

  <%= f.label :expiration_date %>
  <%= f.text_field :expiration_date %>

  <%= f.label :CCV %>
  <%= f.text_field :CCV %>

  <%= f.submit action_name %>

<% end %>

<p>
  <%= link_to "Home", orders_path %>
</p>
