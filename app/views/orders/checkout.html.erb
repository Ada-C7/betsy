<section class = "purchase_width">
<%= form_for @order, url: purchase_path(id: params[:id]), method: :patch do |f| %>
  Name on card:
  <%= f.text_field :cc_name, placeholder: "Ada Lovelace" %>
  Billing address:
  <%= f.fields_for :mailing_address do |address| %>
    <li class = "list_no_button">
      <%= address.label :line1 %>
      <%= address.text_field :line1, placeholder: " streets "%>

      <%= address.label :line2 %>
      <%= address.text_field :line2, placeholder: " city, state, zip code " %>
    </li>
  <% end %>
  Email:
  <%= f.text_field :order_email, placeholder: "ada@petsy.com" %>
  Credit card number:
  <%= f.number_field :cc_num %>
  Expiration date:
  <%= f.text_field :cc_expiry, placeholder: "mm/yy" %>
  cvv number:
  <%= f.number_field :cvv, placeholder: "3 digits" %>
  <%= f.hidden_field :status, value: "paid" %>
</section>
<section class = "center">
  <ul>
  <li class = "link_buttons"><%= f.submit "Purchase", class: 'button'%></li>

<% end %>

  <li class = "link_buttons"><%= link_to "Cancel My Cart", cancel_path(params[:id]), class: 'button' %></li>
</ul>
</section>
