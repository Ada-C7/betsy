<!DOCTYPE html>
<html>
  <head>
    <title>Betsy</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if @logged_in_user %>
        <p>Logged in as <%= link_to @logged_in_user.username, account_path %></p>
        <%= link_to "Log Out", logout_path, method: :delete %>
      <% else %>
        <%= link_to "Log In", "/auth/github" %>
      <% end %>
    </header>

    <% if flash[:result_text] or flash[:messages] %>
      <section class="row status <%= flash[:status] %>">
        <h3><%= flash[:result_text] %></h3>
        <% if flash[:messages] %>
          <ul>
            <% flash[:messages].each do |name, problems| %>
              <% problems.each do |problem| %>
                <li><%= name.capitalize %> <%= problem %></li>
              <% end %>
            <% end %>
          </ul>
        <% end %>
      </section>
    <% end %>

    <%= yield %>
  </body>
</html>
