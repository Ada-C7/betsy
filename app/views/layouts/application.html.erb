<!DOCTYPE html>
<html>
  <head>
    <title>Mother Fuffer</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
<nav>
    <h1><%= link_to 'Mother Fuffer', root_path %></h1>
    <h2> You fuffing fuffer</h2>

    <section>
  <% if @current_user %>
    Fluffed in as <%= link_to "#{@current_user.username}", user_path(session[:user_id])%>
    <%= link_to "Logout", logout_path, method: :logout%>
    <%else%>
    Not Fluffed in
    <%= link_to "Login", login_path%>
    <%end%>
  </section>
</nav>
</header>

<main>
<section class='flash'>
  <% flash.each do |name, message| %>
  <div class="<%= name %>"><%= message %></div>
  <% end %>
</section>
</main>
    <%= yield %>
  </body>
</html>
