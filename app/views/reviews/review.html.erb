<% @product.name %>

<h1> Product </h1>

  <ul id = 'view'>
    <li><strong>Title:</strong> <%= @product.title %></li>
    <li><strong>Category:</strong> <%= @product.category %></li>
    <li><strong>Rating:</strong> <%= pluralize(@product.rating, 'Star') %></li>
    <li><strong>Favorited:</strong> By <%= pluralize(@product.users.count, 'User') %></li></br>
  </ul>

  <% if @product.rating > 4 %>

  <button class = 'top-product'>Top Rated</button>

  <% end %>

<%= form_for @review do |f| %>

  <p>
    <%= f.label :stars, 'Rating' %>
    <div>
      <%= f.radio_button :stars, '1' %>
      <%= f.radio_button :stars, '2' %>
      <%= f.radio_button :stars, '3' %>
      <%= f.radio_button :stars, '4' %>
    <%= f.radio_button :stars, '5' %>
    </div>
  </p>

<% end %>
