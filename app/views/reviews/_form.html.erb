<div class="row">
  <fieldset class="large-6 columns">

<%= form_for @review, method: form_method, url: item_path(@review.item_id) do |f| %>

  <%#= f.label :rating %>
  <%= f.radio_button(:rating, 1) %>
  <%= f.label :rating, "1" %>
  <%= f.radio_button(:rating, 2) %>
  <%= f.label :rating, "2" %>
  <%= f.radio_button(:rating, 3) %>
  <%= f.label :rating, "3" %>
  <%= f.radio_button(:rating, 4) %>
  <%= f.label :rating, "4" %>
  <%= f.radio_button(:rating, 5) %>
  <%= f.label :rating, "5" %>


  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.hidden_field :item_id, value: @review.item_id %>

  <%= f.submit action_name, :class => "button" %>

<% end %>

  </fieldset>

</div>
