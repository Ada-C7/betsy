<ul>
  <% @review.errors.each do |field, msg| %>
  <li>
    <%= field %> <%= msg %>
  </li>
  <% end %>
</ul>

<%= form_for @review, method: form_method do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :rating %>
    <%= f.text_field :rating %>

    <%= f.submit action_name%>
<% end %>
