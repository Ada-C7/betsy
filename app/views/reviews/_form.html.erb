<h1>Add a Review</h1>

<section>
  <%= form_for @review , :url => { :action => "create" } do |f| %>


    <div>
      <%= f.label :rating, class: "label" %>
      <%= f.text_field :rating, class: "field"%>
    </div>

    <div>
      <%= f.label :comment, class: "label"%>
      <%= f.text_field :comment, class: "field"%>
    </div>

    <div id = "_form_section_submit">
      <%= f.submit value: "SAVE"%>
    </div>
  <% end %>
</section>
