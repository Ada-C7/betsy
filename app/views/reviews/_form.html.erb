<section>
  <%= form_for @review do |f| %>

    <%= f.label :rating %>
    <%= f.select :rating, [1, 2, 3, 4, 5]%>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :product_id %>
    <%= f.text_field :product_id %>

    <%= f.label :comment%>
    <%= f.text_area :comment %>

    <%= f.submit class: "button" %>
  <% end %>
</section>
