<section class="list">
    <% if @products.empty? %>
      <p>
        No products match that search term.
      </p>
    <% else %>
      <section class="row small-up-2 medium-up-3 large-up-4 products-list">
        <% @products.each do |product| %>
          <article class="column">
            <p>
              <%= link_to image_tag(product.image_url, class: "preview"), product_path(product.id) %>
            </p>
            <h5>
              <%= link_to product.name, product_path(product.id), class="small-gray" %>
            </h5>
            <p>
              <%= product.quantity, class="small-gray" %>
            </p>
            <p>
              <%= product.price, class="small-gray" %>
            </p>
          </article>
        <% end %>
    <% end %>
</section>
