<section class="list">
<h3>Browse Products</h3>
  <% if @products.empty? %>
    <p>
      No products match that search term.
    </p>
  <% else %>
    <table class="product-list">
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= link_to image_tag(product.image_url), product_path(product.id) %>
        </td>
        <td>
          <%= link_to product.name, product_path(product.id) %>
        </td>
        <td>
          <%= product.quantity %>
        </td>
        <td>
          <%= product.price %>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>
</section>
