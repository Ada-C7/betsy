<h1><%= @product.name %></h1>


<%= image_tag(@product.photo_url, alt: "product img") %>
<p>Price: <%= @product.price %></p>
<p>Description: <%= @product.description %></p>
<p>Sold by: <%= link_to @product.merchant.username, merchant_path(@product.merchant.id) %></p>

<%= link_to "Add to cart", add_OP_path(@product), class: "button", method: :post %>
<%= link_to "Leave a review", new_product_review_path(@product), class: "button" %>
