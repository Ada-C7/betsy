<section class="all-products">
  <h3>Product Page</h3>
  <table class="product-list">
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Description</th>
      <th>Merchant</th>
    </tr>
    <tr>
      <td>
        <%= link_to image_tag(@product.image_url), product_path(@product.id) %>
      </td>
      <td>
        <%= @product.name %>
      </td>
      <td>
        <%= @product.quantity %>
      </td>
      <td>
        <%= sprintf('%.2f', @product.price) %>
      </td>
      <td>
        <%= @product.description %>
      </td>
    </tr>
  </table>
</section>
