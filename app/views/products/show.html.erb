<section class="all-products">
  <h3>All Products</h3>
  <table class="product-list">
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Description</th>
      <th>Merchant</th>
    </tr>
    <tr>
      <td>
        <%= link_to @product.name, product_path(@product.id) %>
      </td>
      <td>
        <%= @product.quantity %>
      </td>
      <td>
        <%= @product.price %>
      </td>
      <td>
        <%= @product.description %>
      </td>
    </tr>
  </table>
</section>

<%= link_to "Add to cart", add_item_path, method: :post, class: :button %>

<%= form_for @item, url: set_item_path , method: :post do |f| %>
  <%= f.hidden_field :id, value: @product.id %>

  <%= f.label :quantity %>
  <%= f.text_field :quantity %>

  <%= f.submit "Add to cart", class: "button" %>
<% end %>
