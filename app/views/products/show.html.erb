<h4>Product</h4>
<div class="row">
  <div class="large-6 small-12 columns">
    <%= image_tag(@product.photo_url, class: "product_img")%>
  </div>

  <div class="large-6 small-12 columns">
    <ul>
      <li>Name : <%= @product.name%></li>
      <li>Price: $<%= @product.price %></li>
      <li>Sold by: <%= link_to @product.vendor.username, vendor_path(@product.vendor_id) %></li>
      <li>Description : <%= @product.description %></li>
      <li>Average Rating : <%= @product.average_review %></li>

    </ul>
  </div>
</div>

<h4><small>Add to Cart</small></h4>
<%= form_for @orderitem do |f| %>
<%= f.hidden_field :product_id, :value => @product.id %>
<div class="row">
  <div class="medium-2 columns">
    <%= f.label :quantity %>
    <%= f.select :quantity, (0..@product.quantity)  %>
  </div>
  <div class="medium-2 columns">
    <%= f.submit "Add to Cart", class: "button" %>
  </div>
  <div class="medium-8 columns">

  </div>


</div>
<% end %>


<h4><small>Add a Review</small></h4>
<%= form_for @review do |f| %>
<%= f.hidden_field :product_id, :value => @product.id %>
<div class="row">
  <div class="medium-2 columns">
    <%= f.label :rating %>
    <%= f.select :rating, (1..5)  %>
  </div>
  <div class="medium-4 columns">
    <%= f.label :comment %>
    <%= f.text_field :comment %>
  </div>

  <div class="medium-2 columns">
    <%= f.submit "Add a Review", class: "button" %>
  </div>
  <div class="medium-4 columns">

  </div>


</div>
<% end %>




<h1><small>List of Reviews</small></h1>
<table>
  <tr>
    <th>Rating</th>
    <th>Comment</th>
  </tr>

  <% @product.reviews.each do |review| %>
  <tr>
    <td> <%= review.rating %> </td>
    <td> <%= review.comment %> </td>
  </tr>
  <% end %>

</table>
</section>

<section>
  <p> <%= link_to "Edit", edit_product_path(@product.id) %> </p>

  <p> <%= link_to "Create a product", new_product_path %> </p>

</section>
