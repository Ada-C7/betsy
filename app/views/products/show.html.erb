<section class="all-products">
  <h3>Product Page</h3>
  <table class="product-list">
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Description</th>
      <th>Merchant</th>
    </tr>
    <tr>
      <td>
        <%= link_to image_tag(@product.image_url), product_path(@product.id) %>
      </td>
      <td>
        <%= @product.name %>
      </td>
      <td>
        <%= @product.quantity %>
      </td>
      <td>
        <%= @product.price %>
      </td>
      <td>
        <%= @product.description %>
      </td>
    </tr>
  </table>
</section>

<ul>
  <% @product.errors.each do |column, msg| %>
    <li>
      <%= column.capitalize %> <%= msg %>
    </li>
  <% end %>
</ul>

<section>
  <%= form_tag add_item_path,  method: :post do %>
      <%= hidden_field_tag :id, @product.id %>
      <%= label_tag :quantity, 'quantity' %>
      <%= number_field_tag :quantity, 1, min: 1 %>
      <%= submit_tag "Add to cart" %>
  <% end %>
</section>
