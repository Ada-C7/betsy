<h4>Product</h4>
<div class="row ">
<p class="small-4 large-6 columns">
<%= image_tag(@product.photo_url, class: "product_img")%>
</p>

<p class="small-4 large-6 columns">
  <ul>
      <li>Name : <%= @product.name%></li>
      <li>Price: $<%= @product.price %></li>
      <li>Sold by: <%= link_to @product.vendor.username, vendor_path(@product.vendor_id) %></li>
      <li>Description : <%= @product.description %></li>
      <li>Average Rating : <%= @product.average_review %></li>

  </ul>
</p>
</div>
  <div class="row">
    <ul>
    <li>Quantity <li>
    <li>Add to Cart</li>
    </ul>

    </div>

      <!-- <h1>Add review</h1> -->

      <p>
      <%= form_tag reviews_path do%>
        <%= label_tag "rating"%>
        <%= text_field_tag "rating"%>
        <%= label_tag "comments"%>
        <%= text_field_tag "comments"%>
        <%= submit_tag "Add" %>
      <% end %>
      </p>
<section>
    <h1><small>List of Reviews</small></h1>
    <table>
      <tr>
        <th>Rating</th>
        <th>Comment</th>
      </tr>

        <% @product.reviews.each do |review| %>
          <tr>
          <td> <%= review.rating %> </td>
          <td> <%= review.comment %> </td>
          </tr>
        <% end %>

      </table>
</section>

<section>
  <p> <%= link_to "Edit", edit_product_path(@product.id) %> </p>

  <p> <%= link_to "Create a product", new_product_path %> </p>

  </section>
