<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>ID</th>
      <th>Image</th>
      <th>Description</th>
      <th>Categories</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @product.name %></td>
      <td><%= @product.id %></td>
      <td><%= image_tag @product.img_url %></td>
      <td><%= @product.description%></td>
      <%if @product.categories.length > 0%>
        <td><%= @product.categories.each{ |category| category.name} %> </td>
      <%else%>
        <td></td>
      <%end%>
      <td><%= number_to_currency(@product.price) %></td>
    </tr>
  </tbody>
</table>
<%= link_to "View All Products", products_path, class: "button" %>
<%= link_to "View Reviews", product_reviews_path(@product.id), class: "button" %>
<%= link_to "Add a New Product", new_product_path, class: "button" %>
<%= link_to "Add to Cart", new_order_product_path(@product.id), class: "button" %>
<%= link_to "Add Review", new_product_review_path(@product.id), class: "button" %>

</section>
