
<section>
  <%= form_for @review do |f| %>
    <%= f.label :rating %>
    <%= f.text_field :rating %>
    <%= f.label :review_text %>
    <%= f.text_field :review_text %>
    <%= f.hidden_field :product_id, :value => @product.id%>
    <%= f.submit value: "Comment" , class: "button hollow topbar-responsive-button "%>
  <% end %>
</section>
