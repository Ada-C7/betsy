
<!-- just for testing purposes of highest_rated -->
<h1>Highest Rated Products</h1>
<ul>
<% Product.highest_rated.each do |product| %>
<li>
  <%= link_to product.name, product_path(product.id) %> <%= product.average_rating %>
</li>
<% end %>
</ul>

<div class = "row">
  <h3 class="small-12 cloumns"> <%= @category_name %> </h3>
</div>
<ul class="row">
<% @products.each do |product| %>
  <li class="small-12 medium-6 large-4 columns category">
    <div class="border">
    <%= link_to(product_path(product.id)) do %>
      <%= product.name %> <br />
      <img src="<%= product.photo_url %>" alt="product photo", class="index_photo" >
    <% end %>
  </div>
  </li>
<% end %>
</ul>
