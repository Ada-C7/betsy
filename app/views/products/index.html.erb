<h3>GHOSTY</h3>


<ul>


<% @products.each do |product| %>
  <li><%= link_to product.name, product_path(product) %></li>
  <p>Merchant: <%= link_to product.merchant.username, merchant_path(product.merchant) %></p>
  <p><%= product.description %></p>
  <p>Cost: <%= product.price %></p>
  <p><%= product.quantity %> in stock</p>
  <p>TBD: Add product categories</p>
  <p><%= link_to "Add to Cart", order_items_path(:product_id => product.id), method: :post %></p>
<% end %>

</ul>
