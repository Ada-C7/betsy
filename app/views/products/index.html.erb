<section class = "row">

  <% @products.each do |product|%>
  <section class = "large-4 colums">
    <div>
      <%=image_tag(product.image, alt: "Product image", class: "image")%>
    </div>
    <p>
      <%= product.name %>
    </p>
    <div>
      <%=product.description%>
    </div>
  </section>
  <% end %>

</section>
