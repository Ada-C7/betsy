<h1> All Products </h1>

<h4>Sort by category</h4>
<ol>
<% @categories.each do |category| %>
<li><%= link_to "#{category.name}", category_products_path(category.id)%></li>
<%end%>
</ol>

<ul>
<% @products.each do |item|%>
<li><%= link_to "#{item.name} Cost: #{item.price}", product_path(item.id) %></li>
<%end%>
</ul>
