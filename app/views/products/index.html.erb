

<h1>All Products</h1>
  <ul>
    <% @products.each do |product| %>
      <%= image_tag product.photo_url %>
      <li>
         <%= link_to product.name, product_path(product.id) %>
      </li>
      <li>
        <%= product.price %>
      </li>
      <li>
        <% product.categories.each do | category |  %>
          <%= category.name %>
        <% end %>
      </li>

    <% end %>

  </ul>
