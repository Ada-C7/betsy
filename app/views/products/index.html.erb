
<% if !@category.nil?%>
  <h3>Category: <%= @category.name%></h3>
<% else %>
  <h3 class = "products">List of all available products</h3>
<% end %>

<div class="row small-up-1 medium-up-3 large-up-6">
  <% @products.each do |product| %>

  <div class="column product_b">
    <%=link_to image_tag(product.image, alt: "Product Image", class: "thumbnail image_index"),product_path(product)%>
    <h5><%= product.name %></h5>

    <p>
      $ <%=product.price %>
    </p>
    <div>
      <%= link_to "Add to cart", product_add_item_path(product.id), method: :post,  class: "button buy"%>
    </div>
    <p><%=product.description%></p>
  </div>
  <% end %>
</div>
