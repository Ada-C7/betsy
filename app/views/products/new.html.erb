<h2>Add a new product</h2>

<section>
  <%= form_for [@merchant, @product] do |f| %>
<%= form_for(@product, :url => merchant_product_path(@merchant)) do %>



    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :price %>
    <%= f.text_field :price %>

    <%= f.label :photo_url %>
    <%= f.text_field :photo_url %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.label :stock %>
    <%= f.text_area :stock %>

    <%= f.hidden_field :merchant_id, :value => @merchant.id%>

    <%= f.submit "Submit" %>

  <% end %>
</section>
