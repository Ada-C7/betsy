<section class= 'form'>
<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :category %>
  <%= f.text_field :category %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :inventory %>
  <%= f.text_field :inventory %>

  <%= f.label :photo_url %>
  <%= f.text_field :photo_url %>

  <%= f.submit value: "Update Product", class: "button" %>
<% end %>
</section>
