  <% @categories.each do | category | %>
    <div class="tag">
      <%= f.label category.name %>
      <%= f.check_box :category_ids, @product.categories = category.id %>
    </div>
  <% end %>
  </div> -->

  <%= f.submit %>
<% end %>
