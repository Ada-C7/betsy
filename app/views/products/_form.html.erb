
<% if @product.errors.messages.length > 0 %>
<section class="row large-12 errors">
  <h2>Something went wrong!</h2>
  <ul>
    <% @product.errors.messages.each do |field, problem_list| %>
      <% problem_list.each do |problem| %>
        <li>
          <strong><%= field %>:</strong>
          <%= problem %>
        </li>
        <% end %>
    <% end %>
  </ul>
</section>
<% end %>

<section class = "row large-4">
  <%= form_for @product do |f| %>
  <div>
    <%= f.label :name, class: "label" %>
    <%= f.text_field :name, class: "field"%>
  </div>
  <div>
    <%= f.label :price, class: "label"%>
    <%= f.text_field :price, class: "field"%>
  </div>
  <div>
    <%= f.label :image, class: "label"%>
    <%= f.text_field :image, class: "field"%>
  </div>
  <div>
    <%= f.label :inventory, class: "label"%>
    <%= f.number_field :inventory, class: "field"%>
  </div>
  <div>
    <%= f.label :description, class: "label"%>
    <%= f.text_field :description, class: "field"%>
  </div>
  <div id = "_form_section_submit">
    <%= f.submit value: "SAVE"%>
  </div>
  <% end %>
</section>
