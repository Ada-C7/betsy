<section>
  <form>
    <div class="row">
      <%= form_for @product do |f| %>
      <%= f.hidden_field :merchant_id, value: @current_user.id %>
      <div class="large-6 columns">
        <label>Product Name
          <%= f.text_field :product_name %>
        </label>
      </div>
      <div class="large-3 columns">
        <label>Price
          <%= f.text_field :price%>
        </label>
      </div>
      <div class="large-6 columns">
        <label>Photo URL
          <%= f.text_field :photo_url%>
        </label>
      </div>
      <div class="large-3 columns">
        <label>Stock
          <%= f.text_field :stock%>
        </label>
      </div>
      <div class="columns large-1 text-center">
        <%= f.submit class: "button" %>
      </div>
    </div>
    <% end %>

  </form>
</section>
