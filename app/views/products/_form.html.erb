<section>
  <%= form_for @product do |f| %>
<!-- Temporarily hard coded all added items as belonging to merchant 1 -->
    <%f.hidden_field :merchant_id, :value=> @merchant.id %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :price %>
    <%= f.text_field :price %>

    <%= f.label :category %>
    <%= f.text_area :category %>

    <%= f.label :quantity %>
      <%= f.text_area :quantity %>

    <%= f.label :image %>
    <%= f.text_area :img_url %>

    <%= f.submit class: "button" %>
  <% end %>
</section>
