<%= form_for @product, url: url_path, method: form_method do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :price  %>
<%= f.text_field :price %>

<%= f.label :quantity %>
<%= f.text_field :quantity %>


<%= f.label :categories %>
<%= f.select(:categories, category_names, { }, { :multiple => true, :size => 5 }) %>

<%= f.label :description %>
<%= f.text_area :description %>

<%= f.label :image_url %>
<%= f.text_field :image_url %>

<%= f.hidden_field :merchant_id, value: current_merchant.id %>

<%= f.submit "Submit", class: "button" %>
<% end %>
