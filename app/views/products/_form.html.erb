<%= form_for @product, url: merchant_products_path do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :price  %>
<%= f.text_field :price %>

<%= f.label :quantity %>
<%= f.text_field :quantity %>

<%= f.label :categories %>
<%= f.select(:categories, category_names, { }, { :multiple => true, :size => 5 }) %>

<%= f.hidden_field :merchant_id, value: current_merchant.id %>

<%= f.submit "Submit" %>
<% end %>
