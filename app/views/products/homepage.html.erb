<section class="all-products">
  <h3>Browse Products</h3>
  <table class="product-list">
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
    <% if !@products.nil? %>
    <% @products.each do |product| %>
    <tr>
      <td>
        <%= link_to image_tag(product.image_url), product_path(product.id) %>
      </td>
      <td>
        <%= link_to product.name, product_path(product.id) %>
      </td>
      <td>
        <%= product.quantity %>
      </td>
      <td>
        <%= product.price %>
      </td>
    </tr>
    <% end %>
    <% end %>
  </table>
</section>
