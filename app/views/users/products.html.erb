<h2>Products</h2>
<% if @logged_in_user.products.empty? %>
  <p>You have no active products in the marketplace.</p>
<% else %>
  <table>
    <thead>
      <tr>
        <td>Image</td>
        <td>Name</td>
        <td>Quantity</td>
        <td>Price</td>
        <td colspan="2">Manage</td>
      </tr>
    </thead>
    <tbody>
      <% @logged_in_user.products.each do |product| %>
        <tr>
          <td><%= image_tag(product.image_url, alt: product.name) %></td>
          <td><%= link_to product.name, product_path(product.id) %></td>
          <td><%= product.quantity %></td>
          <td><%= number_to_currency(product.price) %></td>
          <td><%= link_to "Edit", edit_product_path(product.id) %></td>
          <td>
          <% if !product.retired %>
            <%= link_to "Retire", product_path(product.id), method: :delete %>
          <% else %>
            Retired
          <% end %>
        </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to "New Product", new_product_path %>
<%= link_to "New Category", new_category_path %>
