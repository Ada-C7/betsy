<h1><%= @user.username %></h1>

<p>
  User Profile: <%= @user.profile %>
</p>
<%= link_to "Edit profile", edit_user_path(@user.id) %>
<h3>My Products</h3>

<ul>
  <% @user.products.each do |product| %>
  <li>
    <%= link_to product.name, product_path(product.id) %> <%= link_to "Edit", edit_product_path(product.id) %>
    <% if product.selling? %>
    <%= link_to "Retire product", status_path(product.id), method: :patch %>
    <% else %>
    <%= link_to "Sell product", status_path(product.id), method: :patch %>
    <% end %>

  </li>
  <% end %>
</ul>
<%= button_to "Add a product to your store", new_product_path, method: :get, class: "button" %>
<%= button_to "Add a new category", new_category_path, method: :get, class: "button" %>


<h3>My Purchases</h3>
<% if @purchases.empty? %>
<p>
  No purchases yet.
</p>
<% else %>
<ul>
  <% @purchases.each do |purchase| %>
  <li>
    <%= purchase.created_at.strftime("%m/%d/%Y") %>: <%= purchase.products.length %> item(s) - $<%= purchase.total %>
  </li>
  <% end %>
</ul>
<% end %>


<h3><%= link_to 'Manage My Sales Orders', user_orders_path(@user.id) %></h3>
