<%= render partial: "sidebar" %>

<h2>Profile</h2>
<%= image_tag(@logged_in_user.image_url) %>
<ul>
  <li>Store Name: <%= @logged_in_user.username %></li>
  <li>Email: <%= @logged_in_user.email %></li>
</ul>

<h2>Revenue Summary</h2>
<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% @orders_by_status.each do |status, orders| %>
      <tr>
        <td><%= status.capitalize %></td>
        <% subtotals = orders.map do |order| %>
          <% @logged_in_user.order_revenue(order) %>
        <% end %>
        <td><%= subtotals.inject(:+) %></td>
      </tr>
    <% end %>
    <tr>
      <td>Total</td>
      <td><%= @logged_in_user.total_revenue %></td>
    </tr>
  </tbody>
</table>
