<h1><%= @user.username %></h1>

<h3><%= @user.username %>'s Products</h3>
<ul>
  <% @user.products.each do |product| %>
  <li>
    <%= product.name %> <%= link_to "Edit", edit_product_path(product.id) %>
  </li>
  <% end %>
</ul>
<%= button_to "Add a product to your store", new_product_path, method: :get %>
<%= button_to "Add a new category", new_category_path, method: :get %>


<h3><%= @user.username %>'s Purchases</h3>

<h3><%= link_to 'My Sales Orders', user_orders_path(@user.id) %></h3>
