<article class="user">

  <div class = "row title">
    <h3 class="small-12 small-centered cloumns">
      <%= @user.username %>
    </h3>
  </div>

  <div class="row">
    <div class="small-12 medium-4 columns">
      <h4>My Products</h4>
      <ul>
        <% @user.products.each do |product| %>
        <li>
          <%= link_to product.name, product_path(product.id) %>
          <%= link_to "Edit", edit_product_path(product.id) %>
          <% if product.selling? %>
          <%= link_to "Retire product", status_path(product.id), method: :patch %>
          <% else %>
          <%= link_to "Sell product", status_path(product.id), method: :patch %>
          <% end %>
        </li>
        <% end %>
      </ul>
      <%= button_to "Add a product to your store", new_product_path, method: :get, class: "button" %>
      <%= button_to "Add a new category", new_category_path, method: :get, class: "button" %>
      <%= button_to 'Manage My Sales Orders', user_orders_path(@user.id), method: :get, class: "button" %>
    </div>
    <div class="small-12 medium-4 columns">
      <h4>My Purchases</h4>
      <% if @purchases.empty? %>
      <p>
        No purchases yet.
      </p>
      <% else %>
      <ul>
        <% @purchases.each do |purchase| %>
        <li>
          <%= link_to "Order ##{purchase.id}", order_path(purchase.id) %> purchased on
          <%= purchase.created_at.strftime("%m/%d/%Y") %>: <%= purchase.products.length %> item(s) - <%= number_to_currency(purchase.total) %>
        </li>
        <% end %>
        <li>
          Total spent: <%= number_to_currency(@user.user_purchases_total) %>
        </li>
      </ul>
      <% end %>
    </div>
    <div class="small-12 medium-4 columns">
      <h4>User Profile</h4>
      <p>
        Description: <%= @user.profile %>
      </p>
      <%= button_to "Edit profile", edit_user_path(@user.id), method: :get, class: "button" %>
    </div>
  </div>
</article>
