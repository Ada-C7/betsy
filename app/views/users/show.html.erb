<h2>Revenue Summary</h2>
<% if @logged_in_user.order_items.empty? %>
  <p>You haven't had any sales yet!</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Type</th>
        <th>Order Count</th>
        <th>Amount</th>
      </tr>
    </thead>
    <tbody>
      <% @orders_by_status.each do |status, orders| %>
        <tr>
          <td><%= status.capitalize %></td>
          <td><%= orders.count %></td>
          <% subtotals = orders.map do |order| %>
            <% @logged_in_user.order_revenue(order) %>
          <% end %>
          <td><%= subtotals.inject(:+) %></td>
        </tr>
      <% end %>
      <tr>
        <td>Total</td>
        <td><%= @orders.count %></td>
        <td><%= @logged_in_user.total_revenue %></td>
      </tr>
    </tbody>
  </table>
<% end %>
