<section>
  <h3>testing order_items method:</h3>
<table>
  <thead>
    <th>
      Item
    </th>
    <th>
      Subtotal
    </th>
    <th>
      Quantity
    </th>
    <th>
      Order ID
    </th>
    <th>
      Status
    </th>
    <th>
      Date
    </th>
    <th>
      Time
    </th>
    <th>
      Shipped
    </th>
    <th>

    </th>
    <th>

    </th>
  </thead>

<% @merchant.order_items.each do |order_item| %>
  <tr>
    <td>
      <%=link_to "#{Item.find(order_item.item_id).name.capitalize}", item_path(order_item.item_id), method: :get%>
    </td>
    <td>
      $<%= sprintf('%.2f', @merchant.subtotal(order_item) )%>
    </td>
    <td>
      <%= order_item.quantity%>
    </td>
    <td>
      <%= link_to order_item.order_id, order_path(order_item.order_id) %>
    </td>
    <td>
      <%= order_item.order.status %>
    </td>
    <td>
      <%= order_item.updated_at.strftime('%v') %>
    </td>
    <td>
      <%= order_item.updated_at.strftime('%r') %>
    </td>
    <td>
      <%# if order_item.status.nil %>
        <%#= link_to "Ship", ship_order_item_path(order_item) %>
      <%# else %>
        <%#=  "✔︎" %>
        <%# end %>
    </td>

    <%# if current_merchant %>
    <td>
      <%= link_to "⚙️", edit_item_path(order_item.item.id), method: :get %>
    </td>
    <td>
      <%= link_to "🗑", item_path(order_item.item.id), method: :delete %>
    </td>
    <td>
      <%= link_to "🔒", item_path(Item.find(order_item.item_id)), method: :delete %>
    </td>
    <%#end%>
  </tr>
  <%end%>

</table>

</section>
