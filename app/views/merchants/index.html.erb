<h3>Plantsy Shops</h3>

<section class="row">
  <% @merchants.each do |merchant| %>
    <div class="large-4 columns">
      <ul>
        <% if merchant.products.first != nil %>
        <li class="shop"> <%= link_to merchant.username, merchant_path(merchant.id) %>'s Plantsy Shop
          <p class="home_image"><%= image_tag merchant.products.first.photo_url %></p>
          <p>$<%= link_to merchant.products.first.price %> each</p>
        <% end %>
        </li>
      </ul>
    </div>
    <% end %>
</div>
