<ul>
  <% @merchant.errors.each do |field, msg| %>
    <li><%= field %> <%= msg %></li>
  <% end %>
</ul>

<%= form_for @merchant do |f| %>
  <p>Set you display name here!</p>
  <%= f.label :name %>
  <%= f.text_field :name %>


  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :description %>
  <%= f.text_area :description, size: "40x12" %>

  <%= f.submit "edit", class: "button" %>

<% end %>
