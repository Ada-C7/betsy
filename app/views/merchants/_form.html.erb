<section>
  <%= form_for @merchant do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.submit value: "#{submit_text} merchant" , class: "button" %>
  <% end %>
</section>
