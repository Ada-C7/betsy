<ul>
  <% @merchant.errors.each do |field, msg| %>
    <li><%= field %> <%= msg %></li>
  <% end %>
</ul>

<%= form_for @merchant do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :description %>
  <%= f.text_area :description, size: "60x12" %>

  <%= f.submit %>

<% end %>
