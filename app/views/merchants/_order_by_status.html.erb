<section>

  <h4> Your <%= params[:status]  %> Orders </h4>

  <table>
    <thead>
      <th>
        Status
      </th>
      <th>
        Order Id
      </th>
      <th>
        order total
      </th>
    </thead>
    <% @merchant.orders_by_status(params[:status]).each do |order| %>
    <tr>
      <%# raise %>
      <td>
        <%= order.status%>
      </td>
      <td>
        <%=link_to "#{order.id}", order_path(order.id), method: :get%>
      </td>
      <td>
        $<%= sprintf('%.2f', order.total)%>
      </td>
      <%end%>
    </tr>
  </table>
</section>

<%= link_to "Back", merchant_path(@merchant) %>
